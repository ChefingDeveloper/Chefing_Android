<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layout_reservation"
    android:gravity="center_vertical"
    android:background="#ffffff"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <RelativeLayout
        android:layout_marginLeft="20dp"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/frame"
            android:layout_width="82dp"
            android:layout_height="82dp" />
        <ImageView
            android:id="@+id/image_reservation"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/chicken"
            android:layout_width="74dp"
            android:layout_height="74dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginLeft="50dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/name_reservation"
            android:fontFamily="@font/nanum_extra"
            android:textColor="@color/maincolor"
            android:textSize="15sp"
            android:text="스테이크 만찬"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/chef_reservation"
            android:fontFamily="@font/nanum_bold"
            android:textColor="@color/maincolor"
            android:textSize="13sp"
            android:text="홍길동 셰프"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/confirm_reservation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center_horizontal"
            android:src="@drawable/time_selected"
            android:layout_width="80dp"
            android:layout_height="35dp" />
            <TextView
                android:id="@+id/text_confirm_reservation"
                android:layout_centerInParent="true"
                android:fontFamily="@font/nanum_bold"
                android:textSize="13sp"
                android:textColor="@color/maincolor"
                android:text="예약완료"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/date_reservation"
            android:layout_gravity="center_horizontal"
            android:text="2018.12.01"
            android:textColor="@color/maincolor"
            android:fontFamily="@font/nanum_bold"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/time_reservation"
            android:layout_gravity="center_horizontal"
            android:text="15:00:00"
            android:textColor="@color/maincolor"
            android:fontFamily="@font/nanum_bold"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    </RelativeLayout>


</LinearLayout>