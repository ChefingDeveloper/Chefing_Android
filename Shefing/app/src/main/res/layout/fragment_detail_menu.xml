<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detail.detail_tab.MenuTab.DetailMenuFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <!--1. main dish titlebar-->
    <LinearLayout
        android:gravity="center_vertical"
        android:background="@color/textsubcolor"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:fontFamily="@font/nanum_bold"
            android:textColor="@color/maincolor"
            android:layout_marginLeft="30dp"
            android:text="Main Dish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!--1-1. main dish layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:id="@+id/recyclerview_mainmenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

    <!--2. side dish titlebar-->
    <LinearLayout
        android:gravity="center_vertical"
        android:background="@color/textsubcolor"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:fontFamily="@font/nanum_bold"
            android:textColor="@color/maincolor"
            android:layout_marginLeft="30dp"
            android:text="Side Dish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!--2-1. side dish layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:id="@+id/recyclerview_sidemenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>