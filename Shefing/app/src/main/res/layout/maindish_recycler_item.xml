<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layout_mainmenu"
    android:gravity="center_vertical"
    android:background="#ffffff"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <RelativeLayout
        android:layout_marginLeft="20dp"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/frame"
            android:layout_width="82dp"
            android:layout_height="82dp" />
        <ImageView
            android:id="@+id/image_mainmenu"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:scaleType="centerCrop"
            android:background="@color/textsubcolor"
            android:layout_width="74dp"
            android:layout_height="74dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginLeft="50dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/name_mainmenu"
            android:fontFamily="@font/nanum_extra"
            android:textColor="@color/maincolor"
            android:textSize="15sp"
            android:text="스테이크 만찬"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/price_mainmenu"
            android:fontFamily="@font/nanum_bold"
            android:textColor="@color/maincolor"
            android:textSize="13sp"
            android:text="12,900"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            <TextView
                android:fontFamily="@font/nanum_bold"
                android:textColor="@color/maincolor"
                android:textSize="13sp"
                android:text="원 (1인분)"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>