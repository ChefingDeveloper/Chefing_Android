<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center_vertical"
    android:background="#ffffff"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="140dp">

    <RelativeLayout
        android:layout_marginLeft="40dp"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/frame"
            android:layout_width="82dp"
            android:layout_height="82dp" />
        <ImageView
            android:id="@+id/cart_image_menu"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/chicken"
            android:layout_width="74dp"
            android:layout_height="74dp" />
    </RelativeLayout>

    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/cart_name_menu"
                android:fontFamily="@font/nanum_extra"
                android:textColor="@color/maincolor"
                android:textSize="15sp"
                android:text="유기농 스파게티"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_alignParentRight="true"
                android:id="@+id/layout_price"
                android:layout_below="@id/cart_name_menu"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/cart_count_menu"
                    android:textSize="13sp"
                    android:textColor="@color/maincolor"
                    android:fontFamily="@font/nanum_bold"
                    android:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="13sp"
                    android:textColor="@color/maincolor"
                    android:fontFamily="@font/nanum_bold"
                    android:text="개"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/cart_price_menu"
                    android:layout_marginLeft="10dp"
                    android:textSize="13sp"
                    android:textColor="@color/maincolor"
                    android:fontFamily="@font/nanum_bold"
                    android:text="30,000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="13sp"
                    android:textColor="@color/maincolor"
                    android:fontFamily="@font/nanum_bold"
                    android:text="원"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


                <RelativeLayout
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/layout_price"
                    android:layout_marginTop="10dp"
                    android:id="@+id/cart_btn_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/time_selected"
                        android:layout_width="63dp"
                        android:layout_height="30dp" />
                    <TextView
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/nanum"
                        android:text="삭제"
                        android:textSize="13sp"
                        android:textColor="@color/maincolor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>
   

</LinearLayout>