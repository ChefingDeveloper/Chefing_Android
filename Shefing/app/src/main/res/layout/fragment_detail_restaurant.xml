<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detail.detail_tab.RestaurantTab.DetailRestaurantFragment">

    <ScrollView
        android:id="@+id/scroll_shop"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <!--1. 매장 위치 titlebar-->
    <LinearLayout
        android:gravity="center_vertical"
        android:background="@color/textsubcolor"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:fontFamily="@font/nanum_bold"
            android:textColor="@color/maincolor"
            android:layout_marginLeft="30dp"
            android:text="매장 위치"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!--1-1. 매장위치 layout-->
    <LinearLayout
        android:background="@color/subcolor"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="300dp"></RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/shop_name"
                android:fontFamily="@font/nanum_extra"
                android:textSize="15sp"
                android:textColor="@color/maincolor"
                android:text="브레쉬 애비뉴"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/shop_location_name"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/nanum"
                android:textSize="13sp"
                android:textColor="@color/maincolor"
                android:text="서울 서초구 방배동 1021"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/openmap"
            android:layout_marginRight="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center_horizontal"
            android:src="@drawable/location"
            android:layout_width="30dp"
            android:layout_height="30dp" />

            <TextView
                android:textColor="@color/maincolor"
                android:layout_gravity="center_horizontal"
                android:text="지도 열기"
                android:textSize="13sp"
                android:fontFamily="@font/nanum_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </RelativeLayout>

    <!-- 매장 사진 titlebar-->
    <LinearLayout
        android:gravity="center_vertical"
        android:background="@color/textsubcolor"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:fontFamily="@font/nanum_bold"
            android:textColor="@color/maincolor"
            android:layout_marginLeft="30dp"
            android:text="매장 사진"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageView
        android:id="@+id/shop_image1"
        android:scaleType="centerCrop"
        android:src="@drawable/image_restaurant"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

        <ImageView
            android:id="@+id/shop_image2"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/shop2"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <ImageView
            android:id="@+id/shop_image3"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/shop3"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <ImageView
            android:id="@+id/shop_image4"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/shop4"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <ImageView
            android:layout_marginBottom="10dp"
            android:id="@+id/shop_image5"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/shop5"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

    </LinearLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/arrow"
        android:src="@drawable/arrow"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_width="90dp"
        android:layout_height="90dp" />

</RelativeLayout>